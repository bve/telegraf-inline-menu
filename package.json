{
  "name": "telegraf-inline-menu",
  "version": "4.0.0",
  "description": "Inline Menus for Telegraf made simple.",
  "main": "dist/source",
  "types": "dist/source",
  "engines": {
    "node": ">=8.13"
  },
  "private": true,
  "scripts": {
    "build": "del dist && tsc",
    "prepare": "npm run build",
    "preexample-js": "npm run build",
    "example-js": "node examples/main-javascript.js",
    "start": "ts-node examples/main-typescript.ts",
    "pretest": "npm run build",
    "test": "xo && nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdJoPaTo/telegraf-inline-menu.git"
  },
  "keywords": [
    "Telegraf",
    "Telegram"
  ],
  "author": "Edgar To",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EdJoPaTo/telegraf-inline-menu/issues"
  },
  "homepage": "https://github.com/EdJoPaTo/telegraf-inline-menu#readme",
  "dependencies": {},
  "peerDependencies": {
    "telegraf": "^3.26.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "@types/node": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "ava": "^2.0.0",
    "del-cli": "^3.0.0",
    "eslint-config-xo-typescript": "^0.26.0",
    "nyc": "^15.0.0",
    "telegraf": "^3.28.0",
    "telegram-typings": "^4.0.0-beta",
    "ts-node": "^8.0.2",
    "typescript": "^3.7.4",
    "xo": "^0.26.1"
  },
  "files": [
    "dist/source",
    "!*.test.*"
  ],
  "ava": {
    "babel": false,
    "compileEnhancements": false
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "dist/source",
      "source"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "ava/no-ignored-test-files": "off",
      "@typescript-eslint/no-empty-function": "warn",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ],
      "@typescript-eslint/no-unnecessary-condition": [
        "error",
        {
          "ignoreRhs": true
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/semi": [
        "error",
        "never"
      ]
    },
    "overrides": [
      {
        "files": [
          "examples/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-require-imports": "warn",
          "@typescript-eslint/no-var-requires": "warn",
          "@typescript-eslint/prefer-optional-chain": "off"
        }
      },
      {
        "files": [
          "examples/**/*.js"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-require-imports": "off",
          "@typescript-eslint/no-var-requires": "off",
          "@typescript-eslint/prefer-optional-chain": "off"
        }
      },
      {
        "files": [
          "source/buttons/build-keyboard*.ts",
          "source/menu-buttons.test.ts",
          "source/middleware-helper.is-action.test.ts",
          "test/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "off"
        }
      },
      {
        "files": [
          "test/**/*.ts",
          "source/**/*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-empty-function": "off",
          "ava/no-incorrect-deep-equal": "off",
          "require-atomic-updates": "warn"
        }
      }
    ]
  }
}
